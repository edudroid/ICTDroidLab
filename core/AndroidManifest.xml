<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="hu.edudroid.ict"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15" />
    
    
    <!--  JUST FOR TEST -->
        <permission
        android:name="hu.tmit.gpstracker.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />

    <uses-permission android:name="hu.tmit.gpstracker.permission.C2D_MESSAGE" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:screenOrientation="portrait" >
        
        <receiver android:name="hu.edudroid.ict.BootingBroadcastReceiver">  
    		<intent-filter>  
        		<action android:name="android.intent.action.BOOT_COMPLETED" />  
    		</intent-filter>  
		</receiver>
        
        <activity
            android:name="hu.edudroid.ict.ui.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            
        </activity>
        
        <activity
            android:name="hu.edudroid.ict.ui.PluginListActivity">
        </activity>

        <activity
            android:name="hu.edudroid.ict.ui.ModuleOverviewActivity">
        </activity>

        <activity
            android:name="hu.edudroid.ict.ui.PluginDetailsActivity"
            android:icon="@drawable/ic_launcher"
            android:label="@string/app_name"
            android:theme="@style/AppTheme"
            android:screenOrientation="portrait" />
        
        <service android:name=".GCMIntentService" />
        
        <service 
            android:name="hu.edudroid.ict.CoreService"
            android:label="@string/core_service_name" />
        
        
    </application>

</manifest>