<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >
Â 	
 <PreferenceCategory
            android:title="User Settings">

	<net.jayschwa.android.preference.SliderPreference
    			android:key="my_slider"
    			android:title="@string/slider_title"
    			android:summary="@array/slider_summaries"
    			android:defaultValue="@string/slider_default"
    			android:dialogMessage="@string/slider_message" />
	
	<CheckBoxPreference
                android:key="limit_mode"
                android:title="@string/limitcheckbox_title"
                android:summary="@string/limitcheckbox_summary"
                android:defaultValue="true" />
 </PreferenceCategory>
 
 <PreferenceCategory
            android:title="Frequency Settings">

       <ListPreference
            android:key="resetFrequency"
            android:entries="@array/resetFrequency"
            android:summary="@string/resetFrequency_summary"
            android:entryValues="@array/resetFrequencyValues"
            android:title="@string/resetFrequency"
            android:defaultValue="60000"  />
 </PreferenceCategory>

 <PreferenceCategory
            android:title="Developer Settings">

        <CheckBoxPreference
                android:key="profiling_mode"
                android:title="@string/profilingcheckbox_title"
                android:summary="@string/profilingcheckbox_summary"
                android:defaultValue="false" />

 </PreferenceCategory>

</PreferenceScreen>