<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="hu.edudroid.ictpluginwifi"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15" />
    
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
	<uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
	<uses-permission android:name="android.permission.INTERNET" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:allowBackup="false" >
        
        <activity
            android:name="hu.edudroid.ictpluginwifi.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        
        <service 
            android:name="hu.edudroid.ictpluginwifi.WiFiPluginScanningService"
            android:label="@string/wifi_plugin_service" />
        
        <service 
            android:name="hu.edudroid.ictpluginwifi.WiFiPluginPingService"
            android:label="@string/wifi_plugin_service" />
        
        <service 
            android:name="hu.edudroid.ictpluginwifi.WiFiPluginTracerouteService"
            android:label="@string/wifi_plugin_service" />
        
        <receiver
            android:name="hu.edudroid.ictpluginwifi.WiFiPlugin"
            android:enabled="true"
			android:permission="hu.edudroid.CALL_PLUGIN"
            android:exported="true">
            <intent-filter >
                <action android:name="hu.edudroid.ict.plugin_polling_question"/>
            </intent-filter>
            <intent-filter>
                <action android:name="hu.edudroid.ict.plugin.callmethod" />
            </intent-filter>
        </receiver>
        
    </application>

</manifest>